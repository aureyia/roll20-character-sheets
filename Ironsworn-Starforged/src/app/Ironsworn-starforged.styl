// Fonts
@css {

  @import url('https://fonts.googleapis.com/css?family=Encode+Sans+Expanded:i,400,500,600,700,800,900|Encode+Sans+Condensed:i,400,500,600,700,800,900|Encode+Sans+Semi+Expanded:i,400,500,600,700,800,900|Exo:400,500,600,700,800,900|Montserrat:400,500,600,700,800,900&display=swap');
}
// Common
@import './common/stylus/shared'
// Sheet Core
*, ::before, ::after
  box-sizing border-box
.ironsworn-sheet
  width 842px !important
  font-size 16px
  stdFont()
  font-weight 400
  line-height 1.25
h1, h2, h3, h4, h5, h6
  headerText()
span.i18n-text
  display contents
// FIXME 'display: contents' accessibility bugs have been resolved on most major browsers except safari, but we don't need to worry about safari support (officially r20 only worries about FF and chrome anyways). the mobile version of r20 appears to pass through their app, so if anything we should test it there instead
ol, ul
  margin-left 1em
li
  list-style-type none
  bulletBefore(1em, "https://raw.githubusercontent.com/aureyia/roll20-character-sheets/starforged-ui-components/Ironsworn-Starforged/src/app/img/bullet-8-point-star.svg")
p
  margin 0

label
  labelText()
  interactiveHover()
  borderCommon()
  cursor pointer
  border initial
  padding initial
  margin initial
input[type=text]
  font-weight: 500;
  inputHighlight(3px)
select
  appearance none
  text-indent: 1px
  text-overflow: ''
hr
  border: 0
  height: 1px
  background $color-input
  background-image: linear-gradient(to right, $color-input, #333, $color-input)
textarea
  max-width 828px
  border: 2px solid $color-fg
  font-weight normal
.impacts
  margin-bottom: 0px
.debility
  display: flex
  flex-flow: row wrap
.flex-container
  display flex
  align-items flex-start
.flex-wrapper
  display flex
  flex-direction column
  margin-bottom 10px
  font-weight normal
  padding 0.5em
.track-box-input
  width: 80px
  height: 45px !important
  opacity: 0
  vertical-align: top
.track-box-back
  width: 80px
  height: 45px
  margin-top: -45px
.track-box-input:hover ~ .track-box-back,
.resources-box-input:hover ~ .resources-box-back
  background: $color-input
  transition: .5s ease;
.track-box-input:checked ~ .track-box-back,
.resources-box-input:checked ~ .resources-box-back
  background: $color-fg
  color: $color-bg
  transition: .5s ease;
.track-box-value
  padding: 0px
  font-weight: bold
  height: 35px
  padding-top: 10px
  font-size: 18px
  color: inherit
.pc-name
  width: 100%
  font-weight: bold
  font-size: 14px
  border: 2px solid $color-fg
  background: #E6E7E8
  color: $color-fg
  border-radius: 0
.debil-desc
  width: 100%
  font-weight: bold
  font-size: 14px
.border
  border: 1px solid $color-input
  border-radius: 4px
textarea.full-width
  width: 95%
  resize: vertical
span.switchable-display:checked
  background-color: $color-fg
  color: $color-bg
  transition: .5s ease;
span.switchable-display
  display: inline
  border: 1px solid $color-input
  margin-right: 11px
  border-radius: 4px
  padding: 2px 4px
  font-weight: bold
  font-size: 14px
span.switchable-display:hover
  cursor: pointer
  border-radius: 4px
  padding: 2px 4px
  background-color: $color-input
  color: $color-fg
  transition: .5s ease;
div.preview-roll
  padding: 0em
span.preview-roll
  width: 30%
  margin-left: 1em
.button-container-preview
  width: 2.4em
.no-border
  border: 0
.requirement-area
  height: auto
  margin-bottom: 5px
input.border-bottom
  border-bottom: 1px solid $color-fg
  border-radius: 0em
.full-width
  width: 100%
  margin-top: 0.3em
.note-area
  border-radius 1em
h3, h2
  letter-spacing: 0.05rem;
u
  text-decoration: underline 1pt solid currentColor
.hex-icon
  object-fit contain
  $iconWidth = 64px
  &.vector
    width $iconWidth
    height hexWidthToHeight($iconWidth)
  &.raster
    hexagonClip($iconWidth)
