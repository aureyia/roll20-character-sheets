    width: 14px
    height: 14px
    font-size: 12px
    -moz-border-radius: 3px
    -webkit-border-radius: 3px
    border-radius: 3px

  input[type="checkbox"].checkbox:checked + span::before
    content: "■"

  input.zeroxp[type="radio"] + span::before
    content: "0" !important

  input.filler[type="radio"] + span::before
    content: "■"

  /* Remove dot from all radios _after_ selected one */
