mixin moveListButton(move)
  //- .button-container
  - const statCheck = move.Triggers.find(trigger => { return trigger["Stat Options"] })
  if move['Progress Move']
    +progressRollBtn(move, 'roll-show roll-icon-only')
  else if statCheck
    +movesRollBtn(move, 'roll-show roll-icon-only')
  else
    +placeholderRoll(move, 'roll-show')