include ../../rolls/rolls.pug

mixin moveListButton(move)
  - statCheck = move.Triggers.find(trigger => { return trigger["Stat Options"] })
  if move['Progress Move']
    +progressRollBtn(move.Name, rolls[move.Name].stat, move.id.replace("move-", "move-title-"), ['roll-show'], false, true)
  else if statCheck
    +actionRollBtn(move, ['roll-show'], false, true)
  else
    +placeholderBtn(move, ['roll-show'])