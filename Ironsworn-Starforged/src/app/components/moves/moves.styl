
div
  &.search-bar
    display flex
    justify-content center
    width 100%
    margin 1em 0em 0.5em 0em
  &.preview-bar
    justify-content space-between
    width 100%
    display flex
    margin 0em 0em 0.5em 0em
  &.search-preview-bar
    display flex
    width auto
  &.move-nav-content
    padding 0.2em
    width 100%

input
  &.search-preview-bar
    width 17.6em
    borderCommon()
    border-radius 0
    &:focus
      outline 3px solid $accent-color
      outline-offset 0
      box-shadow inset 0 0 0 2px
  &.search-bar
    width 50%
    borderCommon()
    &:focus
      outline 3px solid $accent-color
      outline-offset 0
      box-shadow inset 0 0 0 2px
  &.table-btn
    &:checked
      & ~ div
        &.move-nav-content
          background $fg-color
          color $bg-color
          transition 0.5s ease



.move
  margin 0em
  color $fg-color
  display flex
  padding 0

.move-name
  width 100%
  borderCommon()

.move-highlight
  &:checked
    & ~ .move-name
      background $accent-color
      outline-offset 0
      box-shadow inset 0 0 0 2px

.move-column
  display flex
  flex-direction column
  margin-right 10px

span
  &.move-result
    width 36em
  &.preview-move-roll
    width 60%
    margin-left 1em

.move-box
  &:nth-child(n
    & + 2)
      margin-top 10px





.preview
  width auto

.move-page-footer
  text-align right !important
  padding-right 1em



.move-show
  display inline-flex
  font-size 1em
  margin 0em
  padding 0.3em
  cursor pointer
  interactiveHover("#969696")

.column-wrap
  flex-flow column wrap
  width 22.5em

.move-delve-table
  width auto !important

article.move-display
  display flex
  flex-flow column
  stdFont($body-font)
  border-radius 1em
  borderCommon()
  h3.move-title
    width auto
    display flex
    align-self left
    background-color $fg-color
    color $bg-color
    border-bottom 1px solid $fg-color
    font-size 1.4em
    font-weight bold
    padding 0.2em 0.5em 0.1em 0.7em
    text-transform uppercase
    .move-progress-label
      display block
      stdFont('Encode Sans Condensed')
      font-size 80%
      font-weight normal
      text-transform none
      font-style italic
      bulletBefore(1rem, "https://raw.githubusercontent.com/aureyia/roll20-character-sheets/resource-buttons/Ironsworn-Starforged/src/app/img/bullet-8-point-star.svg")

  button.button-text
    border-radius 0
    border-style solid
    border-color $fg-color
    border-width 0px 2px
    width stretch
    width -moz-available
    height max-content
    padding 4px
    margin 0
    display flex
    justify-content center
    span
      bulletBefore(21px, "https://raw.githubusercontent.com/aureyia/roll20-character-sheets/resource-buttons/Ironsworn-Starforged/src/app/img/icons/dice-2d10.svg")
      &:before
        margin-bottom: -5px;
  .move-body
    borderCommon()
    padding 1em
    ul
      margin 2px 0px 5px 1rem
    p, li, td
      stdFont('Encode Sans Condensed')
    .oracle-embedded
      .roll-label.embedded-btn
        border-width 4px 4px 0px
        font-size 1em
      table.oracle-table
        margin-top 0px
        border-width 4px
    p, li
      line-height 1.4
    p
      margin-bottom 0.3em
    table
      borderCommon()
      width stretch
      width -moz-available
      margin 0.8em 0em
      thead
        padding 0.3em
        background-color $fg-color
        color $bg-color
        th
          padding-left 0.4em
      tbody
        td
          padding-left 0.4em
  .move-table
    border none
    width 30.5em
    font-size 12px
  .move-roll
    width 18%
  .move-footer
    background-color $fg-color
    color $bg-color
    line-height 0.9em
    font-size 0.9em
    // stdFont($body-font)
    font-variant small-caps
    font-weight bold
    text-align left
    padding 0.5rem

.clear-search
  width fit-content
  width -moz-fit-content
  height auto
  margin 0
  font-weight bold
  font-size 14px
  padding 0.2em 0.2em 0.2em 0.2em
  border 2px solid $fg-color
  cursor pointer
  interactiveHover()

.selected-move
  z-index 3
  &:checked
    & ~ .move-name
      background $fg-color !important
      color $bg-color !important

