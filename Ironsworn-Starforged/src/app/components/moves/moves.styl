
for $moveId in $moves
  input[name=attr_move-preview-display]
    &[value={$moveId}]
      ~ .preview-main .{$moveId}
        display grid

      ~ .preview-list [value={$moveId}]
        interactiveAltColor($color_bg, $color_fg)

    &:not([value={$moveId}]) ~ .preview-main .{$moveId}
      display none

.page-moves
  display grid
  grid-template-columns max-content 1fr
  gap 1em

div
  &.search-bar
    display flex
    justify-content center
    margin 1em 0 0.5em
    width 100%

  &.preview-bar
    display flex
    justify-content space-between
    margin 0 0 0.5em
    width 100%

  &.search-preview-bar
    display flex
    width auto

  &.move-nav-content
    padding 0.2em
    width 100%

input
  &.search-preview-bar
    width 17.6em

    borderCommon()

    border-radius 0

    &:focus
      outline 3px solid $color_highlight
      outline-offset 0
      box-shadow inset 0 0 0 2px

  &.search-bar
    width 50%

    borderCommon()

    &:focus
      outline 3px solid $color_highlight
      outline-offset 0
      box-shadow inset 0 0 0 2px

  &.table-btn
    &:checked
      & ~ div
        &.move-nav-content
          background $color_fg
          color $color_bg
          transition 0.5s ease

.move
  display flex
  margin 0
  padding 0
  color $color_fg

.move-name
  width 100%

.move-highlight
  &:checked
    & ~ .move-name
      outline-offset 0
      background $color_highlight
      box-shadow inset 0 0 0 2px

.move-column
  display flex
  flex-direction column
  margin-right 10px

span
  &.move-result
    width 36em

  &.preview-roll-move
    margin-left 1em
    width 60%

.move-box
  &:nth-child(n
    & + 2)
      margin-top 10px

.preview
  width auto

.move-show
  display inline-flex
  margin 0
  padding 0.3em
  cursor pointer

  interactiveHover(#969696)

.column-wrap
  flex-flow column wrap
  width 22.5em

.move-delve-table
  width auto !important

article.gamerules
  .move-progress-label
    footerText()

    display block
    align-self end
    margin-left 1em
    color $color_fg_fade
    font-style italic

  .move-table
    width 30.5em
    border none

  .roll-move
    width 18%

.clear-search
  margin 0
  padding 0.2em
  width fit-content
  height auto
  cursor pointer

  interactiveHover()

.selected-move
  z-index 3

  &:checked
    & ~ .move-name
      background $color_fg !important
      color $color_bg !important

// TODO: iterate thru $moves for toggle classes
.move-nav-child
  display flex
  margin 0.2em 0
  padding 0
  width auto
  height 1.3em
  text-align center

:-webkit-scrollbar
  width 7px
  -webkit-appearance none

:-webkit-scrollbar-thumb
  border-radius 4px
  background-color rgba(0, 0, 0, 0.5)
  box-shadow 0 0 1px rgba(255, 255, 255, 0.5)

.move-delve-column-stat-header, .move-delve-stat-column
  width 16%

.move-delve-column-stat-header-1, .move-delve-stat-column-1
  width 17%

.move-delve-column-stat-header-2, .move-delve-stat-column-2
  width 18%

.move-delve-column-stat-header-3, .move-delve-stat-column-3
  width 15%

.move-delve-column-header, .move-delve-column
  width 50%

.move-delve-row-header
  display flex
  padding 0 5px
  height auto
  border-bottom 2px solid $color_fg

.embedded-btn
  padding-top 0.2em !important
