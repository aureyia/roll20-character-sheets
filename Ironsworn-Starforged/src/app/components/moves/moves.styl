.move-nav-child
  display flex
  width auto
  height 1.3em
  padding 0
  margin 0.2em 0em 0.2em 0em
  text-align center

:-webkit-scrollbar
  -webkit-appearance none
  width 7px

:-webkit-scrollbar-thumb
  border-radius 4px
  background-color rgba(0,0,0,0.5)
  box-shadow 0 0 1px rgba(255,255,255,0.5)

.move-delve-column-stat-header,
.move-delve-stat-column
  width 16%

.move-delve-column-stat-header-1,
.move-delve-stat-column-1
  width 17%

.move-delve-column-stat-header-2,
.move-delve-stat-column-2
  width 18%

.move-delve-column-stat-header-3,
.move-delve-stat-column-3
  width 15%

.move-delve-column-header,
.move-delve-column
  width 50%

.move-delve-column-stat-header,
.move-delve-column-stat-header-1,
.move-delve-column-stat-header-2,
.move-delve-column-stat-header-3,
.move-delve-column-header
  font-weight bold

.move-delve-row-header
  padding 0px 5px 0px 5px
  display flex
  height auto
  border-bottom 2px solid $color-fg

.embedded-btn
  padding-top 0.2em !important
  // stdFont($body-font)

input.optional-move-failures:checked ~ div.optional-move-failures,
input.optional-move-sites:checked ~ div.optional-move-sites,
input.optional-move-threat:checked ~ div.optional-move-threat,
input.optional-move-rarity:checked ~ div.optional-move-rarity
  display block

