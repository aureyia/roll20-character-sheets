.modal-button
  btn()

.modal-overlay
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  visibility hidden
  background rgba(0, 0, 0, 0.7)
  opacity 0
  transition opacity 500ms
  display flex
  &:target
    visibility visible
    opacity 1

.modal-dialog
  colorThemeLight()
  position relative
  margin 70px auto
  padding 1em
  width max-content
  height max-content
  border-radius 1em
  transition all 500ms ease-in-out
  display grid
  gap 0.5em
  .modal-title
    text-align center
    grid-row 1
  .close-dialog
    btn()
    transition all 200ms
  .modal-back
    btn()
    grid-row 1