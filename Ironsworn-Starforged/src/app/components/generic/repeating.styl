
.repcontrol
  button.btn
  // .repcontrol_edit, .repcontrol_add
    width auto
    height auto
    borderCommon()
    border-radius 0
    text-shadow none
    text-transform uppercase
    padding 0.2em
    margin 0.3em
    color $color_fg
    background #dfe0e2
    interactiveHover($color_input)
    interactiveFocus(1px)
