  .repcontrol_edit
    margin-right 3px
  .repcontrol_add
    margin-left 3px
  .repcontrol_del
    float right
    width auto
    margin 0
    height auto
  .repcontrol_move
    cursor move
    width auto
    margin 0
    height auto