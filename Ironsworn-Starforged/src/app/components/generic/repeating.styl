
.repcontrol
  button.btn
    width auto
    height auto

    borderCommon()

    margin 0.3em
    padding 0.2em
    border-radius 0
    background #dfe0e2
    color $color_fg
    text-transform uppercase
    text-shadow none

    interactiveHover($color_input)
    interactiveFocus(1px)

.repcontainer
  .repcontrol_edit
    margin-right 3px

  .repcontrol_add
    margin-left 3px

  .repcontrol_del
    margin 0
    /* float right */
    width auto
    height auto

  .repcontrol_move
    margin 0
    width auto
    height auto
    cursor move