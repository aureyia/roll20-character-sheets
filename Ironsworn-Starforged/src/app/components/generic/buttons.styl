.static-btn
  btn()

  .btn-content, span
    padding 0.2em
    width 100%
    text-align center

.toggle-btn
  btn()

  span
    padding 4px 2px

.btn-input
  &:checked
    & ~ .btn-content
      background $color_fg
      color $color_bg

button
  &[type="roll"]
    &:before // unsetting r20's styling
      content none
      font-family inherit

    &.icon-only
      margin 0
      padding 0
      color $color_fg

      iconBtn("https://raw.githubusercontent.com/aureyia/roll20-character-sheets/starforged-ui-components/Ironsworn-Starforged/assets/icons/dice-2d10.svg")

      border 0

  &.placeholder-button
    background-image none !important
    opacity 100% !important
    cursor default !important
    pointer-events none !important

// hex buttons
.close-preview
  margin 0
  padding 0.2em
  width auto
  height auto
  text-align center
  text-transform uppercase
  cursor pointer

  interactiveHover()

  &.icon-only
    display flex
    justify-content center
    align-self center
    align-items center
    width max-content
    height max-content
    border none
    background none
    line-height 1
    grid-area close
    text-anchor middle

    hexagonClip($h2_size)
    interactive($color_warning, #fff)

    &:before
      width inherit
      height inherit
      background transparent
      color inherit
      content "*"
      font-family "Pictos"
