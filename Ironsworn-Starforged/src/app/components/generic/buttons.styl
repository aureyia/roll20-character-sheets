.static-btn
  btn()

  .btn-content, span
    padding 0.2em
    width 100%
    text-align center

  span
    padding 4px 2px

.btn-input
  &:checked
    & ~ .btn-content
      background $color_fg
      color $color_bg

button
  &[type=roll], &[type=action]
    &:before // unsetting r20's styling
      content none
      font-family inherit

    &.icon-only
      margin 0
      padding 0
      border 0
      color $color_fg

      &[name=act_progress-roll]
        iconBtn($icon_progress_roll)

      &[name^=roll_oracle]
        iconBtn($icon_roll_oracle)

      &[name=act_action-roll]
        iconBtn($icon_action_roll)

  &.placeholder-button
    background-image none !important
    opacity 100% !important
    cursor default !important
    pointer-events none !important

// hex buttons
hexButtonIcon($bg_color, $fg_color, $icon)
  btn($bg_color, $fg_color, 1em, 0, 0)
  iconBtn($icon)
  hexagonClip($h2_size)

hexButtonFontIcon($bg_color, $fg_color, $content, $font = "Pictos")
  display flex
  justify-content center
  align-self center
  align-items center
  padding 0.2em
  width max-content
  height max-content
  border none
  background none
  color $fg_color
  text-align center
  line-height 1
  cursor pointer
  grid-area close
  text-anchor middle

  btn($bg_color, $fg_color, 1em, 0, 0)
  hexagonClip($h2_size)

  &:before
    display flex
    align-self center
    width min-content
    height min-content
    background transparent
    color inherit
    content $content
    font-family $font

button[type="action"].close-preview-display
  hexButtonFontIcon($color_warning, white, "*")