.static-btn
  btn()
  interactiveHover($input-color, $fg-color)
  .btn-content
    padding 0.2em 0.2em 0.2em 0.2em
    width 100%
    text-align center

.toggle-btn
  btn()
  interactiveHover($input-color, $fg-color)
  text-align center
  font-weight 600
  font-size 14px
.btn-input
  &:checked
    & ~ .btn-content
      background $fg-color
      color $bg-color
button, .btn
  color currentColor
  text-shadow none
  background $bg-color
  &[type="roll"]
    &:before // unsetting r20's styling
      content none
      font-family inherit
    &.roll-icon-only
      // width 1.75em
      // height 1.75em
      margin 0
      padding 0
      color $fg-color
      iconBtn("https://raw.githubusercontent.com/aureyia/roll20-character-sheets/starforged-oracle-subcategories/Ironsworn-Starforged/src/app/img/icons/dice-2d10.svg")
  interactiveHover()
  &.placeholder-button
    opacity 100% !important
    background-image none !important
    pointer-events none !important
    cursor default !important