
.page-moves, .page-oracles
  display grid
  grid-template-columns max-content 1fr
  gap 1em

.list-group
  borderCommon(2px, $color_fg)

  overflow hidden
  // box-sizing border-box
  margin 0
  margin-bottom 1em
  height fit-content
  border-width 4px
  border-radius 1em
  background-color $color_fg
  break-inside avoid

  .list-group-title
    colorThemeDark()

    display inline-block
    padding 0 5px 3px
    width stretch
    width -moz-available
    vertical-align text-bottom
    text-align center

  ul
    display grid
    // border-bottom-left-radius 1em
    // border-bottom-right-radius 1em
    overflow hidden
    margin 0
    padding 0
    width auto
    border 0
    gap 4px

    li
      margin 0
      padding 0
      border 0
      border-radius 0

    li.list-group-item
      display flex
      margin 0
      height min-content
      background none
      list-style-type none
      gap 4px

      &:before
        all initial

      & > *
        background-color $color_bg

      &:nth-child(2n) > *
        background-color $color_bg_alt

      .toggle-btn
        btn()
        subLabelText(1em)

        margin 0
        padding 0
        width stretch
        width -moz-available
        outline 0
        border 0

        span
          display contents

      button.icon-only, button.placeholder-button
        flex-grow 0
        flex-shrink 0
        margin 0
        width 1.75em
        height 1.75em
        border 0

input.preview-control
  &[value=false]
    & ~ .preview-list
      width -moz-available
      columns 3
      column-gap 1em

    & ~ .preview-main
      display none

  &:not([value=false])
    & ~ .preview-list
      width max-content
      columns 1

      .list-group
        margin 0
        border-radius 0

    & ~ .preview-main
      display flex
