mixin closeButton(pageName, parentWidget="preview", iconOnly=true)
  -
    classes = [`close-${parentWidget}`]
    if (iconOnly) {
      classes.push("icon-only")
    }
  button(type="action" role="" class=classes name=`act_set-${pageName}-${parentWidget}` data-i18n-title=`close-${parentWidget}` data-i18n-aria-label=`close-${parentWidget}` value="false")
    if (!iconOnly)
      +i18n(`close-${parentWidget}`)


mixin overview(previewType, value=1, classes="")
  input(hidden type='radio' class='switch-vis' name=`attr_${previewType}-view` value=value checked)
  .overview.switchable-vis
    block

mixin preview(previewType, value=2)
  input(hidden type='radio' class='switch-vis' name=`attr_${previewType}-view` value=value)
  .preview.switchable-vis
    block

mixin previewSidebar(classes="")
  nav.preview-sidebar
    block

mixin previewMain(classes="")
    div.preview-main
      block

