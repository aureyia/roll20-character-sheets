mixin overview(previewType, value=1, classes="")
  input(hidden type='radio' class='switch-vis' name=`attr_${previewType}_view` value=value checked)
  .overview.switchable-vis
    block

mixin preview(previewType, value=2)
  input(hidden type='radio' class='switch-vis' name=`attr_${previewType}_view` value=value)
  .preview.switchable-vis
    block

mixin previewSidebar(classes="")
  nav.preview-sidebar
    block

mixin previewMain(classes="")
    div.preview-main
      block

