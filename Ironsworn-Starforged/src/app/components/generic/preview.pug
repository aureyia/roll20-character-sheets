mixin closeButton(pageName, parentWidget="preview", iconOnly=true)
  -
    let classes = [`close-${parentWidget}`]
    if (iconOnly) {
      classes.push("icon-only")
    }
  button(type="action" role="" class=classes name=`act_set_${pageName}_${parentWidget}` data-i18n-title=`close-${parentWidget}` data-i18n-aria-label=`close-${parentWidget}` value="false")
    if (!iconOnly)
      +i18n(`close-${parentWidget}`)

