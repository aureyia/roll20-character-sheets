bottom-radius(dir, value)
  border-bottom-{dir}-radius  value

.nav-bar
  margin-top 0.3em
  border 1px solid $fg-color
  bottom-radius(left, 1em)
  bottom-radius(right, 1em)
  .nav-row
    display flex
    &:nth-last-child(1)
      .nav-child
        &:nth-child(1)
          bottom-radius(left, 0.79em)
          label, .page-button
            bottom-radius(left, 0.5em)
          .page-button-back
            // bottom-radius(left, 0.4em)
        &:nth-last-child(1)
          bottom-radius(right, 0.79em)
          label, .page-button
            bottom-radius(right, 0.5em)
          .page-button-back
            // bottom-radius(right, 0.4em)
    .nav-child
      borderCommon()
      width 100%
      text-align-last center
      overflow hidden
      // &:nth-child(1)
      //   border-bottom-left-radius  0.79em
      // &:nth-last-child(1)
      //   border-bottom-right-radius 0.79em
    label
      margin 0
      padding 0
      cursor pointer
      interactive-hover($input-color, $fg-color)


.page-button-back
  // padding 0.1em 0em 0.1em 0em
  padding 0.1em
  font-weight 600
  height 100%
  width 100%
  display block

.page-button
  &:checked
    & ~ span
      &.page-button-back
        background $fg-color
        color $bg-color
        transition 0.5s ease

.summary
  margin-top 1em

label.page-label
  text-align center
