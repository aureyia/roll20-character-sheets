mixin tab(tabName, parentName, i18n_key, fallbackLabel=false, classes=[], aria_controls = tabName)
  -
    btnValue = tabName
    btnName = `act_set-${parentName}-display`
  button(
    type="action"
    role="tab"
    name=btnName
    value=btnValue
    class=["page-tab", ...classes]
    id = `${parentName}-tab-${tabName}`
    aria-controls=aria_controls
  )
    +i18n(i18n_key, fallbackLabel)

mixin tabList(parentName, defaultTab, ariaLabel, classes=[])
  nav(
      aria-label=ariaLabel
      role="tablist"
      class=["page-tablist"]
      id=parentName
      class = classes
    )
    input(
      type="hidden"
      name=`attr_${parentName}-display`
      value=defaultTab
    ).tabber
    block
