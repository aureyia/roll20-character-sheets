column-wrap(height)
  display: flex;
  flex-flow: column wrap;
  height: height

input.oracle-ironsworn:checked + div.oracle-ironsworn,
input.oracle-ironsworn:checked + div.oracle-ironsworn,
input.oracle-delve:checked + div.oracle-delve
  switchDisplayOn(0.7s)

.oracle-btn
  margin 0
  width 100%

section.oracle-table
  h4
    stdFont("Exo")
    light()
    font-weight 700
    background none
    font-size 1.375em
    padding 0
    margin-bottom 0.25em

table.oracle-table
  border none
  width stretch
  margin 0
  thead
    border-top 4px solid $color-fg-lowkey
    padding 0.3em
    background-color $color-fg
    color $color-bg
    th
      padding-left 0.4em
  tbody
    border-top 4px solid $color-fg-lowkey
    td
      padding-left 0.4em


.oracle
  margin: 0em
  color: $color-fg
  display: flex

.oracle-subtitle, .oracle-column-head
  padding-right 0.5em
  padding-left 0.35em

.oracle-column-head
  font-weight 600
  background-color $sf-ui-gray-dark
  color $color-fg

.oracle-subtitle
  text-transform uppercase
  background-color $color-fg
  color $color-bg

article.gamerules
  font-weight 500
  width stretch
