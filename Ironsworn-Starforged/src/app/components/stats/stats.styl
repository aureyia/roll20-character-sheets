.stats
  justify-content space-evenly
  align-items center
  border-radius 0%
  margin-bottom 1em

.stat
  display flex
  flex-direction column
  justify-content center
  align-items center
  margin 1em

.stats-title
  width 100px

.stats-input
  font-weight bold
  width 60px
  line-height 40px
  font-size 28px
  text-align center
  height 50px !important
  border-radius 0

input
  &.stats-input
    borderCommon()
    background #e6e7e8
    &:focus
      outline 3px solid $color-highlight
      outline-offset 0
      box-shadow inset 0 0 0 2px

button
  &.roll-label
    margin 0
    padding 0em 0.4em 0em 0.4em
    width auto
    borderCommon()
    cursor pointer
    text-align center
    line-height 1.4em
    border-radius 1em
    interactiveHover($color-input, $color-fg)


label
  &.stat-toggle
    border-radius 1em
    margin 0
    padding 0
    borderCommon()
    text-align center
    cursor pointer
    interactiveHover($color-input, $color-fg)


input[type=radio].stat-set
  &:checked
    & ~ div
      &.stat-set
        display flex
        width auto
        margin-left 5em
        switchDisplayOn()

input[type=radio].stat-edit
  &:checked
    & ~ div
      &.stat-edit
        display flex
        width auto
        switchDisplayOn()

div
  &.stat-toggle
    &.set-toggle
      width 100%
      height 0
      margin 4em 1em 0em 1em
    &.edit-toggle
      transform rotate(90deg)
      text-transform uppercase
      width 100%
      height 0
      margin-top 3.45em