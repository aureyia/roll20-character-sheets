include ../rolls/rolls
include ../modal/modal

mixin stats
  section.stats
    //- h3.title="Stats"
    each stat in stats
      +attrRollable(stat, `stat-${stat}-description`, `stat-${stat}`, `roll-plus-${stat}`)
    //- +modal("stats-editor", "Stats")
    //-   +statsEditor()
    //- +statsStatic()

mixin statsEditor()
  each stat in stats
    .stat
      label.stats-title
        +i18n(`stat-${stat}`)
        input(
          type='text'
          name=`attr_${stat}`
          value='0'
        )

mixin statsStatic()
  each stat in stats
    +statRollBtn(stat, `stat-${stat}`)
      span(class=['attr-display'] name=`attr_${stat}`)

mixin editToggle(parentName, defaultMode="off", ariaLabel)
  section(class=parentName, aria-label=ariaLabel)
    input(type="hidden" name=`attr_editor-${parentName}` value=defaultMode)
    block

mixin editToggleItem(parentName, toggleOff=false)
  -
    classes;
    btnValue;
    btnClasses;
    i18n_key;
    if (toggleOff == true) {
      classes = ["editor-on"];
      btnValue = "off";
      btnClasses = ["note-icon-menu-check"]
      i18n_key = "stat-toggle-apply";
    }
    else if (toggleOff == false) {
      classes = ["editor-off"];
      btnValue = "on";
      btnClasses = ["note-icon-pencil"]
      i18n_key = "edit";
    };
  section(class=classes)
    block
    +setAttrBtn(`editor-${parentName}`, btnValue, i18n_key, btnClasses)