mixin statEditor()
  each stat in stats
    div.stat
      h3.stats-title
        +i18n(`stat-${stat}`)
      input(
        type='text'
        class='stats-input'
        name=`attr_${stat}`
        value='0'
      )

mixin statStatic()
  each stat in stats
    button(
    type='roll'
    class='switch-display roll-label stat'
    title=`Roll +${stat}`
    name=`roll${_.upperFirst(stat)}`
    value=`&{template:starforged_moves} {{name=Roll +${stat}}} {{action=[[{d6+@{${stat}}+(?{Modifier|0}),{10}}kl1]]}} {{negate1=[[1+@{${stat}}+(?{Modifier|0})]]}} {{negate2=[[2+@{${stat}}+(?{Modifier|0})]]}} {{negate3=[[3+@{${stat}}+(?{Modifier|0})]]}} {{negate4=[[4+@{${stat}}+(?{Modifier|0})]]}} {{negate5=[[5+@{${stat}}+(?{Modifier|0})]]}} {{negate6=[[6+@{${stat}}+(?{Modifier|0})]]}} {{challenge1=[[d10]]}} {{challenge2=[[d10]]}} {{momentum=[[@{momentum}]]}} {{modifiers=[[@{${stat}}+(?{Modifier|0})]]}} {{add=[[(?{Modifier|0})]]}} {{stat=[[@{${stat}}]]}}`
    )
      h3.stats-title
        +i18n(`stat-${stat}`)
      span(class='stats-input' name=`attr_${stat}`)




mixin stats
  section.stats
    input(type="hidden" name="attr_stat_mode")
    .stat_mode_1
      +actionBtn('set_stat_mode', 2, "stat-toggle-apply")
      +statEditor()
    .stat_mode_2
      +actionBtn('set_stat_mode', 1, "edit")
      +statStatic()