include ../../common/pug/translation

mixin actionRollBtn(attribute, i18n_key=attribute, classes=[], blockContent=false, iconOnly=false)
  button(
    type="roll"
    class=classes
    name=`roll_${attribute}`
    title=`Roll +${attribute}`
    value!=`&{template:starforged_moves} {{name=Roll +${attribute}}} {{action=[[{d6+@{${attribute}}+(?{Modifier|0}),{10}}kl1]]}} {{negate1=[[1+@{${attribute}}+(?{Modifier|0})]]}} {{negate2=[[2+@{${attribute}}+(?{Modifier|0})]]}} {{negate3=[[3+@{${attribute}}+(?{Modifier|0})]]}} {{negate4=[[4+@{${attribute}}+(?{Modifier|0})]]}} {{negate5=[[5+@{${attribute}}+(?{Modifier|0})]]}} {{negate6=[[6+@{${attribute}}+(?{Modifier|0})]]}} {{challenge1=[[d10]]}} {{challenge2=[[d10]]}} {{momentum=[[@{momentum}]]}} {{modifiers=[[@{${attribute}}+(?{Modifier|0})]]}} {{add=[[(?{Modifier|0})]]}} {{stat=[[@{${attribute}}]]}}`
  ).action-roll
      if blockContent==true
        block
      else if iconOnly==false
        +i18n(i18n_key)
