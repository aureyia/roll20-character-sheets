.track-box-input
  width: 80px
  height: 45px !important
  opacity: 0
  vertical-align: top
.track-box-back
  width: 80px
  height: 45px
  margin-top: -45px
.track-box-input:hover ~ .track-box-back,
.resources-box-input:hover ~ .resources-box-back
  background: $color_input
  transition: .5s ease;
.track-box-input:checked ~ .track-box-back,
.resources-box-input:checked ~ .resources-box-back
  background: $color_fg
  color: $color_bg
  transition: .5s ease;
.track-box-value
  padding: 0px
  height: 35px
  padding-top: 10px
  color: inherit

.challenge-rank-radio
  display flex
  justify-content space-around
  align-items center
  margin-top 0.3em
  margin-bottom 10px
  .challenge-rank-option
    borderCommon()
    margin 0.2em 0.5em 0.2em 0.5em
    padding 0
    cursor pointer
    text-align center
    input
      &:checked
        & ~ h5
          background $color_fg
          color $color_bg

.progress-container
  display flex
  flex-direction column
  justify-content center
  align-items center

.progress-name
  width 100%

input
  &.progress-name
    background #e6e7e8
    borderCommon()
    border-radius 0
    margin-bottom 0.2em

.progress-input
  width 40px
  height 40px
  background transparent
  text-align center
  justify-content center
  align-items center
  padding 2px 0px 0px 12px
  margin 0px
  cursor pointer
  borderCommon()
  border-radius 0
  interactiveHover($color_input, $color_fg)

  &:focus
    outline 3px solid $color_highlight
    outline-offset 0
    box-shadow inset 0 0 0 2px

/* button to control display of countdown boxes */

input.progress-name
  margin-bottom 0px

.challenge-show
  text-transform uppercase
  padding 0
  margin 0
  borderCommon()
  width auto
  height auto
  cursor pointer
  border-left 0
  interactiveHover($color_input, $color_fg)


.challenge-show-back
  height 100%
  padding 0em 1em 0em 1em
  line-height 25px

input[type='checkbox'].challenge-show:checked ~ div.countdown-row
  switchDisplayOn(0.7s)

input[type='checkbox'].challenge-show-button:checked ~ div.challenge-show-back
  background $color_fg
  color $color_bg

/* grid container to hold challenge boxes and countdown boxes */

.countdown-row, .progress-row
  display grid
  grid-template-columns 151px repeat(10, 43.5px) 110px
  align-items center
  text-transform uppercase
  // upper casing the whole row instead of child elements cuz the relevant children don't have classes

/* Individual boxes */

label.challenge-label
  padding-left 0.5em
  display block
  height 18px
  margin 0px

.challenge-box
  borderCommon()
  padding 0
  display inline-flex
  height 36px
  width 36px
  margin 0.2em 0em
  cursor pointer

.challenge-fill
  height 100%
  width 100%
  background $color_bg

input[type="checkbox"].challenge:checked ~ .challenge-fill
  background $color_fg

input[type="checkbox"].challenge:hover ~ .challenge-fill
  background #E6E7E8

.blank-index
  display: inline-block
  height: 40px
  width: 40px

