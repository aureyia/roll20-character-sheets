.legacies
  display grid
  grid-gap 0.5em

  .progress-boxes
    display grid
    justify-content space-between
    text-transform uppercase
    grid-auto-flow column

    .progress-input
      width 60px
      height 60px

  .experience-boxes
    display flex
    justify-content space-between

  .title
    padding 0.3em 0em 0em 0em
    font-weight bold
    grid-column 1

  .ten-marker
    margin 0
    padding 0
    height fit-content
    justify-self right

  .legacy-roll
    margin 0

  .legacy-row-1
    display grid

.quests, .bonds, .discoveries
  display grid
  grid-gap 0.3em

label.experience-box
  &:nth-child(1)
    border-top-left-radius 0.3em
    border-bottom-left-radius 0.3em

    div
      border-top-left-radius 0.16em
      border-bottom-left-radius 0.16em

  &:nth-last-child(1)
    border-top-right-radius 0.3em
    border-bottom-right-radius 0.3em

    div
      border-top-right-radius 0.16em
      border-bottom-right-radius 0.16em

  display inline-flex
  margin 0.2em 0em
  padding 0
  height 1em
  border 2px solid black
  cursor pointer

input.experience-box
  vertical-align top
  opacity 0
  cursor pointer

.experience-fill
  width 100%
  height 100%
  background $color_bg

input[type="checkbox"].experience-box:checked ~ .experience-fill
  background $color_fg

input[type="checkbox"].experience-box:hover ~ .experience-fill
  background #E6E7E8