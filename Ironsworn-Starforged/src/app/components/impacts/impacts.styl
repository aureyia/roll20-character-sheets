.impact-list
  display flex
  flex-flow row wrap
  justify-content space-evenly

.impact-component
  margin-top 1em
  display flex
  flex-flow wrap
  // background #e8e9ec
  // clip-path polygon(-20% 100%, 6% 0%, 100% 0%, 100% 100%)

.debil-desc
  width: 100%

.impacts
  toggleBtn($color_danger)
  .toggle-btn
    width 90%
    border-radius 1em

.severity-track
  display flex
  margin-top 1em

.meter-child
  width 100%

ul.impact-body-list
  margin 0em 0.2em 0.3em 1.3em

p.severity-reduce,
p.impact-clear
  margin-bottom 0.3em

.impact-group
  width 25%

.impact-group-title
  text-align center
  text-transform: uppercase
  font-weight bold
  margin-bottom 0.3em



.custom-impacts
  margin-left 0.6em
  margin-bottom 2em
  margin-top 0.5em
  display flex
  .impact
    margin 0 0.5em
  .other-impacts-title
    width auto
    margin-right 0.6em
    align-self center
    text-align: center;
  input[type=text]
    border 0
    border-bottom 2px solid $color_fg
    border-radius 0
    padding 0
