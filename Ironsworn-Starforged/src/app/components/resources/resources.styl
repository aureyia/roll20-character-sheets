
.resources
  & > *
    // box-sizing border-box
    background $color-bg
  display grid
  // box-sizing border-box
  color $color-fg
  background $color-fg
  border 4px solid $color-fg
  gap 4px
  justify-content stretch
  margin-bottom 0.1em
  grid-template-rows 1fr 1fr
  grid-template-columns 1fr repeat(max-content)
  .resource
    grid-row 2
    display flex
    margin 0
    border none
    // border 2px solid $color-fg
    // border-color currentColor
    // border-width 3px 2px
    // border-style solid
  .resource-title
    padding 0.5em
    font-size 14px
    font-weight 700
    margin 0
    border 0
    line-height 9px
    background none
    text-transform uppercase
  .character-name
    grid-row 1
    grid-column-start 1
    grid-column-end 4
    // border-left-width 3px
  .character-callsign
    grid-row 1
    grid-column-start 4
    grid-column-end 7
    // border-right-width 3px
  .character-pronouns
    // border-left-width 3px
  .resource:last-child
    // border-right-width 3px
    // grid-row 2
    // grid-column 5

  button.btn.roll-resource, label.resource
    width auto
    height auto
    border 0
    margin 0
    padding 0
    cursor pointer
    text-align center
    text-shadow none
    display flex
    // display inline
    background $color-bg
    interactiveHover($color-input, $color-fg)

    span
      display block
      pointer-events none
  .resource-value
    font-size 14px
    width 38px
    padding 0
    padding-left 4px
    border-radius 0
    background $color-input
    margin 0
    height auto
    cursor pointer
    font-weight 600
    border none
    border-left 1px solid currentColor
    inputHighlight(3px)
    .resource-value-box
      display flex
      width 100%
  input[type=text]
    cursor text


  .resources-box-input
    width: 80px
    height: 40px !important
    opacity: 0
    vertical-align: top

  .resources-box-back
    width: 80px
    height: 40px
    margin-top: -40px

  .resources-box
    width: 80px
    height: 40px
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    border-radius: 0%
    background: transparent
    border: 2px solid $color-fg
    margin-bottom: 2px

  .resources-box-value
    padding: 0px
    font-weight: bold
    height: 35px
    padding-top: 10px
    font-size: 18px
    color: inherit

  .resources-title-box
    width: 80px
    height: 40px
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    border-radius: 0%
    background: transparent
    border: 2px solid $color-fg
    margin-top: 20px
    margin-bottom: 2px
  label
    &.health-reset
      font-size 14px
      margin 0
      padding 2px 7px 2px 6px
      cursor pointer
      interactiveHover($color-input)

  h3
    &.health-max
      font-size 14px
      margin-right 0.3em
      line-height 23px
      padding-left 0.3em
    &.health-max-value
      padding-right 0.3em

  .health-max-value
    font-size 14px
    line-height 22px
    color #555

  .health-max-box
    display flex
    background $color-input

  .health-status-box
    display flex

  .load-value
    width 27px

  .character-name
    // grid-column 1
    input
      width 100% !important
      border none

  .character-pronouns
    input
      width 100% !important
      border none

  .character-callsign
    // grid-column 2
    input
      width 100% !important
      border none
