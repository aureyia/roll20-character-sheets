.resources
  display flex
  input[type=text]
    width 10ch
    flex 1

.rollable-attr
  rollableStatBox()


$disabledStates = {
  max: increment,
  min: decrement
}

input.minmax
  for $state, $prefix in $disabledStates
    &[value={$state}]
      + .spinner ~ button.{$prefix+'-attr'}
        disabled()

.resource-meters
  display grid
  gap 0.25em
  grid-auto-columns 1fr
  grid-auto-flow column
  .resource-rollable
    grid-row 1
  .momentum
    grid-row 2
    grid-column 1 / span 4
    display flex
    height max-content
  // button[name=act_roll-action]
