$momentum_gradient = linear-gradient(-90deg, #ce242b, #c80052, #b10074, #892890, #7b47aa, #685fbf, #5175cf, #3988d9, #259adf, #28aae1)
$momentum_colors = #ce242b #cd073f #c80052 #be0064 #b10074 #9f1883 #892890 #813ca0 #784caf #6c5bbc #5f68c6 #5175cf #4280d6 #348cdb #2896de #23a0e0 #28aae1


.momentum-burn
  btn()

// it's possible to get these as the FG color thru use of filters, but precalculating them is probably a better idea
.momentum
  colorThemeLight()
  display grid
  borderCommon()
  border-radius 1em

  .momentum-header
    flexCenter()
    labelTextLg()

    padding 0.25em
    width max-content

  button.momentum-burn
    btn()
    colorThemeDark()

  button.momentum-burn, .momentum-status-box
    max-width max-content
    width max-content
    white-space nowrap
    height -moz-available
    height stretch

  .momentum-status-box, .condition-meter-box
    labelTextLg()

    color $color_fg_fade

  .momentum-status-box
    bodyTextSm()

    font-size 90%

  .condition-meter
    display flex
    flex-grow 10
    margin 0
    border solid $color_fg
    border-width 0 1px
    background-image $momentum_gradient
    gap 2px

  .condition-meter-box, .momentum-status-box, button[name=act_momentum-burn]
    padding 0.25em
    width max-content

  .condition-meter-box
    interactive(#fff, transparent)

    width: (100 / 17)%
    border none

    for num in -6 .. 10
      $colorIndex = num + 6

      &[for=momentum_{num}]
        color: $momentum_colors[$colorIndex]

  input[type=radio][name=attr_momentum]:checked + .condition-meter-box, .condition-meter-box:hover
    interactiveAltColor(#fff, transparent)

    paint-order stroke fill
    text-stroke 2px black
    -webkit-text-stroke 2px black
