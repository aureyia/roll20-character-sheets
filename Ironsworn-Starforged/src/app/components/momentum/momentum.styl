.momentum
  display flex

  .footer
    margin-top 1em

  input[type=checkbox].momentum-burn:hover ~ div.momentum-burn-back
    background-color $input-color
    transition: .5s ease;

  .momentum-box-input:hover ~ .momentum-box-back
    background: $input-color
    transition: .5s ease;

  .momentum-box-input:checked ~ .momentum-box-back
    background: $fg-color
    color: $bg-color
    transition: .5s ease;

  input[type=checkbox].momentum-burn
    opacity 0
    border 0

  div.momentum-burn-back
    font-weight bold
    text-align center
    line-height 22px
    padding 0em 0.2em

  label.momentum-burn
    borderCommon()
    text-transform: uppercase
    padding 0
    cursor pointer
    margin 0
    font-size 1em

  .momentum-box-input
    opacity 0
    border 0

  .momentum-status-box
    text-transform: uppercase
    display: flex
    flex-direction: row
    justify-content: center
    align-items: center
    border-radius: 0%
    background: transparent
    border 2px solid $fg-color
    padding-left 0.2em

  .momentum-status-value
    width auto
    font-size 1em

  h3.momentum-max-box,
  h3.momentum-reset-box
    display: inline
    padding-left: 1em

  .momentum-box-value
    font-weight bold
    font-size 16px
    color inherit

  .momentum-input
    font-weight bold
    width 30px
    font-size 13px
    text-align center
    background transparent

  .momentum-box
    cursor pointer
    borderCommon()
    padding 0
    margin 0

  .momentum-dark
    color $bg-color
    border: 2px solid $fg-color
    background: $fg-color
    width: 100%

  .momentum-max,
  .momentum-reset
    line-height 1.4em
    font-size 1em

  .momentum-title
    color $bg-color
    line-height 1.2em
    font-size 1.2em


  .momentum-header
    height 20px

  .sub-header-static
    margin-top 0.2em
    border: 1px solid $fg-color

  .momentum-status-attr
    padding 0em 0.2em