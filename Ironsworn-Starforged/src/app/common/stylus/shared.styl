btn()
  display flex
  width auto
  font-size 14px
  padding 0
  border 2px solid #494a4c
  cursor pointer

input-highlight(shadow)
  outline 3px solid #fd0
  outline-offset 0
  box-shadow inset 0 0 0 shadow

hide()
  visibility hidden
  transition opacity 1s ease-out
  opacity 0
  height 0
  overflow hidden

show-hide(time = 0.2s)
  visibility visible
  height auto
  opacity 1
  transition time ease

borderCommon()
  border 2px solid #4C4D4F

dark()
  background #4C4D4F
  color white

font-body-text(weight=500)
  font-family 'Encode Sans Expanded', 'Helvetica', 'Arial', sans-serif
  font-weight weight
  letter-spacing 0.025rem
font-compact-text(weight=400)
  font-family 'Encode Sans Condensed', 'Helvetica', 'Arial', sans-serif
  font-weight weight
  letter-spacing 0.025rem
font-header-lg(weight=800) // h1, h2
  // font-family 'Teko', 'Helvetica', 'Arial', sans-serif
  // use
  font-family 'Exo', 'Helvetica', 'Arial', sans-serif
  font-weight weight
  text-transform uppercase
  letter-spacing 0.05rem
font-header-sm(weight=700) // h3-h6
  font-family 'Encode Sans Expanded', 'Helvetica', 'Arial', sans-serif
  font-weight weight
  text-transform uppercase
  letter-spacing 0.05rem
font-btn(weight=700)
  font-family 'Encode Sans Expanded', 'Helvetica', 'Arial', sans-serif
  font-weight weight
  text-transform uppercase