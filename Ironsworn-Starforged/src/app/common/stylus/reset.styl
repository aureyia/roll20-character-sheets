/* r20 default character sheet styles. add and remove as needed */
@import "./shared.styl"

*
  box-sizing border-box

.ironsworn-sheet
  width inherit

  header
    width inherit

p, ul, ol, button, span, input, textarea
  font-size inherit
  font-family inherit

.pictos
  font-family "Pictos" !important

hr
  clear initial

.sheet-row, .sheet-2colrow, .sheet-3colrow
  display initial
  clear initial

.sheet-col
  display initial
  vertical-align initial

.sheet-col img
  max-width initial

.sheet-2colrow .sheet-col
  margin-right initial
  width initial

.sheet-3colrow .sheet-col
  margin-right initial
  width initial

.sheet-col:last-child
  margin-right initial

button
  background none
  box-shadow none
  text-shadow initial

.repitem.repitembroken
  border initial

h1, h2, h3, h4, h5, h6, label
  color inherit

.no-touch .charsheet .repcontainer.editmode div.repitem:hover .itemcontrol
  background-color inherit

button[type=roll], button[type=action][name=act_roll-action], button[type=action][name=act_roll-progress]
  &.ui-draggable-dragging
    z-index initial
    margin initial
    padding initial
    width initial
    height initial
    font-size initial

    &:before
      font-family initial

button.disabled
  opacity initial

.charmancer .sheet-choice
  display initial

.charmancer.locked input
  opacity initial
  pointer-events initial

.charmancer.locked span label
  pointer-events initial

label
  margin 0

.btn, .btn.btn-default
  display initial
  margin 0
  padding initial
  border initial
  border-color inherit
  border-bottom-color inherit
  border-radius initial
  filter initial
  background-color inherit
  background-image none
  background-repeat no-repeat
  box-shadow none
  color inherit
  vertical-align initial
  text-align initial
  text-shadow initial
  font-size initial
  line-height initial

input[type=hidden], input[hidden=hidden]
  display none !important

input, textarea, select, .uneditable-input
  width unset
  // display unset
