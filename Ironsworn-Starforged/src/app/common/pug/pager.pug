//- simple vis / display toggle; when checked, the pager div is


//- toggles: basic hidden switch with no block/wrapper attached
mixin attrToggleRadio(attrName, value, parentAttr=false, classes=[], checked=false, hidden=true)
  input(hidden=hidden type='radio' name='attr_'+attrName value=value class=classes id=id checked=checked)

mixin attrToggleCheck(attrName, classes=[], checked=false, id, hidden)
  input(hidden=hidden type='checkbox' name='attr_'+attrName class=classes id=id checked=checked)

//- pagers: provides show/hide wrapper for paging functional
mixin visPagerRadio(attrName, value, classes=[], checked=false)
  +attrToggleRadio(attrName, value, [...classes, "switch-vis"], checked)
  div( class=[...classes, "pager", "switchable-vis"] hidden )
    block

mixin visPagerCheck(attrName, classes=[], checked=false)
  +attrToggleCheck(attrName, [...classes, "switch-vis"], checked)
  div( class=[...classes, "pager", "switchable-vis"] hidden )
    block

