//- wrapper element for translation keys to provide a concise way to add them
//- style with display: contents

mixin i18n(i18n_key, fallbackString = false, elementType="span")
  if (elementType == "span")
    if (fallbackString)
      span.i18n-text!=fallbackString
    else
      span(data-i18n=i18n_key).i18n-text!=fallbackString||translation[i18n_key]
    //- styled with 'display: contents'
  else
    - console.log("mixin i18n: elementType", elementType, "not recognized, falling back to <span>")
    span(data-i18n=i18n_key).i18n-text!=fallbackString||translation[i18n_key]

