- var sheets = [ 'character', 'shared', 'location' ]
input(type='checkbox' name='attr_modes_choice' class='modes-show hide-element' checked)
div.modes-show.hide-element
  div.mode-title
    h2.mode-title.i18n-text(data-i18n='page-select')=translation['page-select']
  div.modes

    each page, index in sheets
      label.mode
        h4.i18n-text(data-i18n=`page-name-${page}`)=translation[`page-name-${page}`]
        div.mode
          input(type='radio' name='attr_mode_button' class='hide-element' value=index)
          div.mode-image
            img(src=`https://raw.githubusercontent.com/Roll20/roll20-character-sheets/master/Ironsworn-Starforged/assets/${page}-sheet.png`)

each sheet, index in sheets
  input(type='radio' name='attr_mode' class='shared-mode hide-element' value=`${index}`)
  div(class=`${sheet}-mode hide-element`)
    if sheet == 'character'
      include ./character/index
    else if sheet == 'shared'
      include ./shared/index
    else if sheet == 'location'
      include ./location/index