- var sheets = [ 'character', 'shared' ]
input(type='checkbox' name='attr_modes_choice' class='modes-show switch-display' checked)
div.modes-show.switchable-display
  div.mode-title
    h2.mode-title.i18n-text(data-i18n='page-select')=translation['page-select']
  div.modes

    each page, index in sheets
      label.mode
        h4.i18n-text(data-i18n=`page-name-${page}`)=translation[`page-name-${page}`]
        div.mode
          input(type='radio' name='attr_mode_button' class='switch-display' value=index)
          div.mode-image.switchable-display
            img(src=`https://raw.githubusercontent.com/Roll20/roll20-character-sheets/master/Ironsworn-Starforged/assets/${page}-sheet.png`)

input(type='radio' name='attr_mode' class='character-mode switch-display' value='0')
div.character-mode.switchable-display
  include ./character/index

input(type='radio' name='attr_mode' class='shared-mode switch-display' value='1')
div.shared-mode.switchable-display
  include ./shared/index