include ../page
include ../../components/generic/preview
include ../../components/moves/moves

mixin movesPage
  +page("moves", "character", 6)
    +overview("move", 1)
      each group in movegroups
        +moveGroup(group)
    +preview("move", 2)
      +previewSidebar()
        each group in movegroups
          +moveGroup(group)
      +previewMain
        each move in moves.Moves
          //- Stupid way for me to generate orcale ccs
          //- - console.log(`input[type=radio].${move.id}:checked ~ div.${move.id},`)
          input(type='radio' name='attr_move_preview' class=`${move.id} switch-display` value=move.id)
          +moveRulesArticle(move, false, "switchable-display")
