input[type=hidden][name=attr_mode]
  &[value=sheet-select] ~ #sheet-select
    visOn()
  &:not([value=sheet-select]) ~ #sheet-select
    visOff()
  for sheetName in $sheets
    &[value=sheet-{sheetName}] ~ #sheet-{sheetName}
      visOn()
    &:not([value=sheet-{sheetName}]) ~ #sheet-{sheetName}
      visOff()

