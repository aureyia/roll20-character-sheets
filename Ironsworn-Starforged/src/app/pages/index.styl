#sheet-select
  display: flex;
  flex-flow: column;
  align-items: center;
  gap: 1em;
  .mode-title
    text-transform uppercase

.mode
  display: flex
  justify-content: center
  width fit-content
  margin 0

.mode-image
  display flex

