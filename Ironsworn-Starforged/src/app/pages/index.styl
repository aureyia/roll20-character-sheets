$standard_gap = 0.5em

.changelog
  borderCommon()
  margin-bottom 1em
  padding 1em

.ironsworn-sheet
  display flex
  gap $standard_gap
  flex-direction column
  header
    display flex
    gap $standard_gap
    flex-direction column

.center
  text-align center

.close-changelog
  borderCommon()
  cursor pointer
  padding 0
  margin 0.5em 0 0 0
  text-align: center
  interactive-hover($color_input, $color_fg)

input.changelog:checked ~ div.changelog
  display none

.modes
  display flex
  justify-content space-evenly

label.mode
  text-align center
  margin 0.5em
  padding 0
  cursor pointer
  box-shadow: 1px 1px 19px 6px rgba(0,0,0,0.15);
  opacity 1
  z-index 5
  width: auto;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  gap: 1em
  &:hover
    .mode-image
      opacity 0.7
      transition: .5s ease;
  h4
    margin-bottom 0.5em
    margin-top 0.5em

